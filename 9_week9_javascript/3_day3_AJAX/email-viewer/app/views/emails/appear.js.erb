var div;
 div = $("#<%=@idDiv%>")
 tr = $("#<%=@idTr%>")

//Make div appear or disappear
if (div.css('display') == "none") {
        div.slideDown(350);
} else {
        div.slideUp(350);
}

//Change css if an email has been read
if (<%= @read == false %>) {
        tr.removeClass("unread");
        <%= @email.read = true %>
        <%= @email.save %>
    }  