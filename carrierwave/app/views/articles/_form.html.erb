    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :article_name %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content, id: :article_content %>
  </div>

  <% if @article.images? %>
    <% @article.images.each do |img| %>
  <p><%= image_tag img.url %></p>
  <% end %>
  <% end %>

  <div class="field">
    <%= form.label :images %>
    <%= form.file_field :images, id: :article_image, multiple: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
