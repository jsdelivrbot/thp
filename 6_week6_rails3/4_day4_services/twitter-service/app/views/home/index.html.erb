<h1>That's where you twit</h1>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>
</div>

<div class="form">
    <%= form_tag(home_index_url) do %>
        <%= label_tag :tweet %>
        <%= text_field_tag :tweet, params[:tweet] %>
        <%= submit_tag "Tweet it"%>
    <% end %>
</div>