<h1>Your booking recap -  Please enter passenger information </h1>

<div class="jumbotron">
   <div> Your departure date: <%= @flight.departure_date%> </div>
   <div> Departure Airport: <%= @flight.departure_airport.airport_code %> </div>
   <div> Arrival Airport: <%= @flight.arrival_airport.airport_code %></div>
   <div> Flight duration: <%= @flight.duration%></div>
</div>

<h3>Passenger Information</h3>
<%= form_for @booking do |f| %>

  <% @passenger.each do |passenger| %>
      <%= f.fields_for passenger, index: passenger.id do |p| %>
      <div>
          <%= p.label :email %>
         <%= p.text_field :email %>
        <%= p.label :name %>
        <%= p.text_field :name %>
      </div>
    <% end %>
  <% end %>
  <div>
    <%= f.hidden_field :flight_id, value: @flight.id %>
    <%= f.submit "Fly Me To The Moon!" %>
  </div>
<% end %>
