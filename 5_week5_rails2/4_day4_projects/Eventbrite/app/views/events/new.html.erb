<% provide(:title, 'New Event') %>
<h1>New Event</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@event, url: events_path) do |f| %>
    <%= render 'shared/error_event_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :date %>
      <%= f.date_field :date %>

      <%= f.label :place %>
      <%= f.text_field :place %>

      <%= f.submit "Create a new event", class: "btn btn-primary" %>
    <% end %>
  </div>